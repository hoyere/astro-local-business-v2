---
import BaseLayout from '@layouts/BaseLayout.astro';
import Hero from '@components/sections/Hero.astro';
import Container from '@components/common/Container.astro';
import { siteConfig } from '../site.config';
---

<BaseLayout>
  <Hero
    title={`Welcome to ${siteConfig.name}`}
    subtitle="Professional Services"
    description={siteConfig.description}
    primaryCta={{ text: "Get Started", href: "/contact" }}
    secondaryCta={{ text: "Our Services", href: "/services" }}
    variant="centered"
  />

  <!-- Services Preview Section -->
  <section class="section">
    <Container>
      <div class="section-header">
        <h2>Our Services</h2>
        <p class="text-muted">Professional solutions tailored to your needs</p>
      </div>

      <div class="services-grid">
        <div class="service-card">
          <h3>Service One</h3>
          <p>Description of the first service offering and its benefits to customers.</p>
        </div>
        <div class="service-card">
          <h3>Service Two</h3>
          <p>Description of the second service offering and its benefits to customers.</p>
        </div>
        <div class="service-card">
          <h3>Service Three</h3>
          <p>Description of the third service offering and its benefits to customers.</p>
        </div>
      </div>
    </Container>
  </section>

  <!-- CTA Section -->
  <section class="section section-alt">
    <Container>
      <div class="cta-content">
        <h2>Ready to Get Started?</h2>
        <p class="text-muted">Contact us today for a free consultation</p>
        <a href="/contact" class="btn btn-primary btn-lg">Contact Us</a>
      </div>
    </Container>
  </section>
</BaseLayout>

<style>
  .section-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .section-header h2 {
    margin-bottom: 0.5rem;
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 2rem;
  }

  @media (min-width: 768px) {
    .services-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  .service-card {
    padding: 2rem;
    background-color: var(--color-surface);
    border-radius: 0.5rem;
    border: 1px solid var(--color-border);
  }

  .service-card h3 {
    margin-bottom: 1rem;
  }

  .service-card p {
    color: var(--color-text-muted);
    margin: 0;
  }

  .cta-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-content h2 {
    margin-bottom: 0.5rem;
  }

  .cta-content p {
    margin-bottom: 2rem;
  }
</style>
