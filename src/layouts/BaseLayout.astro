---
import '../styles/global.css';
import { ViewTransitions } from 'astro:transitions';
import Header from '@components/layout/Header.astro';
import Footer from '@components/layout/Footer.astro';
import LocalBusinessSchema from '@components/seo/LocalBusinessSchema.astro';
import { siteConfig } from '../site.config';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  includeSchema?: boolean;
}

const {
  title = siteConfig.name,
  description = siteConfig.description,
  ogImage = '/og-image.jpg',
  includeSchema = true,
} = Astro.props;

const fullTitle = title === siteConfig.name
  ? title
  : `${title} | ${siteConfig.name}`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <title>{fullTitle}</title>

    <!-- Canonical URL -->
    <link rel="canonical" href={Astro.url} />

    <!-- Local Business Schema -->
    {includeSchema && <LocalBusinessSchema />}

    <!-- View Transitions -->
    <ViewTransitions />

    <!-- Theme script - runs before paint to prevent flash -->
    <script is:inline>
      const theme = localStorage.getItem('theme') ||
        (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
      document.documentElement.dataset.theme = theme;
    </script>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />

    <!-- Header scroll behavior - works with view transitions -->
    <script>
      function initHeaderScroll() {
        const header = document.querySelector('.site-header');
        if (header) {
          // Set initial state based on current scroll position
          if (window.scrollY > 50) {
            header.classList.add('scrolled');
          }

          window.addEventListener('scroll', () => {
            if (window.scrollY > 50) {
              header.classList.add('scrolled');
            } else {
              header.classList.remove('scrolled');
            }
          }, { passive: true });
        }
      }

      // Run on initial load
      initHeaderScroll();

      // Re-run after view transitions
      document.addEventListener('astro:after-swap', initHeaderScroll);
    </script>

    <!-- Preserve theme across view transitions -->
    <script>
      document.addEventListener('astro:after-swap', () => {
        const theme = localStorage.getItem('theme') ||
          (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
        document.documentElement.dataset.theme = theme;
      });
    </script>
  </body>
</html>
