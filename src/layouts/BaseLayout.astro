---
import '../styles/global.css';
import { ViewTransitions } from 'astro:transitions';
import Header from '@components/layout/Header.astro';
import Footer from '@components/layout/Footer.astro';
import LocalBusinessSchema from '@components/seo/LocalBusinessSchema.astro';
import { siteConfig } from '../site.config';

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  includeSchema?: boolean;
}

const {
  title = siteConfig.name,
  description = siteConfig.description,
  ogImage = '/og-image.jpg',
  includeSchema = true,
} = Astro.props;

const fullTitle = title === siteConfig.name
  ? title
  : `${title} | ${siteConfig.name}`;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <!-- Favicon - GA Brand -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="362x406" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/favicon.png" />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />

    <!-- Social Card Meta (standard tags used by many platforms) -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <title>{fullTitle}</title>

    <!-- Canonical URL -->
    <link rel="canonical" href={Astro.url} />

    <!-- Local Business Schema -->
    {includeSchema && <LocalBusinessSchema />}

    <!-- View Transitions -->
    <ViewTransitions />

    <!-- Theme script - runs before paint to prevent flash -->
    <script is:inline>
      const theme = localStorage.getItem('theme') ||
        (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
      document.documentElement.dataset.theme = theme;
    </script>
  </head>
  <body>
    <!-- Skip to main content link for keyboard/screen reader users -->
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <Header />
    <main id="main-content">
      <slot />
    </main>
    <Footer />

    <!-- Header scroll behavior - works with view transitions -->
    <script>
      function initHeaderScroll() {
        const header = document.querySelector('.site-header');
        if (header) {
          // Set initial state based on current scroll position
          if (window.scrollY > 50) {
            header.classList.add('scrolled');
          }

          window.addEventListener('scroll', () => {
            if (window.scrollY > 50) {
              header.classList.add('scrolled');
            } else {
              header.classList.remove('scrolled');
            }
          }, { passive: true });
        }
      }

      // Run on initial load
      initHeaderScroll();

      // Re-run after view transitions
      document.addEventListener('astro:after-swap', initHeaderScroll);
    </script>

    <!-- Theme management - handles toggle and View Transitions -->
    <script>
      // Restore theme after View Transitions
      function restoreTheme() {
        const theme = localStorage.getItem('theme') ||
          (window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light');
        document.documentElement.dataset.theme = theme;
      }

      // Theme toggle handler using event delegation (survives DOM swaps)
      function handleThemeToggle(e: Event) {
        const target = e.target as HTMLElement;
        const toggle = target.closest('.theme-toggle');
        if (!toggle) return;

        const currentTheme = document.documentElement.dataset.theme;
        const newTheme = currentTheme === 'dark' ? 'light' : 'dark';
        document.documentElement.dataset.theme = newTheme;
        localStorage.setItem('theme', newTheme);
      }

      // Set up event delegation for theme toggle (only once)
      document.addEventListener('click', handleThemeToggle);

      // Restore theme after each navigation
      document.addEventListener('astro:after-swap', restoreTheme);
    </script>
  </body>
</html>
