---
import { siteConfig } from '../../site.config';

interface Props {
  /**
   * Footer layout variant:
   * - 'simple': Just logo, social links, and copyright
   * - 'standard': 4-column layout with all sections (default)
   * - 'minimal': Copyright and essential links only
   */
  variant?: 'simple' | 'standard' | 'minimal';
}

const { variant = 'standard' } = Astro.props;
const { name, contact, social, hours, footerLinks } = siteConfig;
const currentYear = new Date().getFullYear();
---

<footer class:list={['site-footer', `footer-${variant}`]}>
  <div class="container">
    {/* Standard variant - full 4-column layout */}
    {variant === 'standard' && (
      <div class="footer-grid">
        {/* Company Info */}
        <div class="footer-section">
          <h3 class="footer-heading">{name}</h3>
          <address class="footer-address">
            <p>{contact.address.street}</p>
            <p>{contact.address.city}, {contact.address.state} {contact.address.zip}</p>
            <p>
              <a href={`tel:${contact.phone.replace(/[^0-9]/g, '')}`}>{contact.phone}</a>
            </p>
            <p>
              <a href={`mailto:${contact.email}`}>{contact.email}</a>
            </p>
          </address>
        </div>

        {/* Services Links */}
        <div class="footer-section">
          <h3 class="footer-heading">Services</h3>
          <ul class="footer-links">
            {footerLinks.services.map((link) => (
              <li>
                <a href={link.href}>{link.label}</a>
              </li>
            ))}
          </ul>
        </div>

        {/* Company Links */}
        <div class="footer-section">
          <h3 class="footer-heading">Company</h3>
          <ul class="footer-links">
            {footerLinks.company.map((link) => (
              <li>
                <a href={link.href}>{link.label}</a>
              </li>
            ))}
          </ul>
        </div>

        {/* Hours */}
        <div class="footer-section">
          <h3 class="footer-heading">Hours</h3>
          <ul class="footer-hours">
            {hours.map((item) => (
              <li>
                <span class="days">{item.days}</span>
                <span class="time">{item.hours}</span>
              </li>
            ))}
          </ul>
        </div>
      </div>
    )}

    {/* Simple variant - logo, social, copyright */}
    {variant === 'simple' && (
      <div class="footer-simple">
        <div class="footer-brand">
          <span class="footer-logo">{name}</span>
          <p class="footer-tagline">{contact.address.city}, {contact.address.state}</p>
        </div>
      </div>
    )}

    {/* Social Links (shown for standard and simple) */}
    {variant !== 'minimal' && (
      <div class="footer-social">
        {social.facebook && (
          <a href={social.facebook} target="_blank" rel="noopener noreferrer" aria-label="Facebook">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
              <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
            </svg>
          </a>
        )}
        {social.instagram && (
          <a href={social.instagram} target="_blank" rel="noopener noreferrer" aria-label="Instagram">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
            </svg>
          </a>
        )}
        {social.bluesky && (
          <a href={social.bluesky} target="_blank" rel="noopener noreferrer" aria-label="Bluesky">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 16 16" fill="currentColor">
              <path d="M3.468 1.948C5.303 3.325 7.276 6.118 8 7.616c.725-1.498 2.698-4.29 4.532-5.668C13.855.955 16 .186 16 2.632c0 .489-.28 4.105-.444 4.692-.572 2.04-2.653 2.561-4.504 2.246 3.236.551 4.06 2.375 2.281 4.2-3.376 3.464-4.852-.87-5.23-1.98-.07-.204-.103-.3-.103-.218 0-.081-.033.014-.102.218-.379 1.11-1.855 5.444-5.231 1.98-1.778-1.825-.955-3.65 2.28-4.2-1.85.315-3.932-.205-4.503-2.246C.28 6.737 0 3.12 0 2.632 0 .186 2.145.955 3.468 1.948"/>
            </svg>
          </a>
        )}
        {social.linkedin && (
          <a href={social.linkedin} target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
              <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/>
              <rect x="2" y="9" width="4" height="12"/>
              <circle cx="4" cy="4" r="2"/>
            </svg>
          </a>
        )}
      </div>
    )}

    {/* Copyright */}
    <div class="footer-bottom">
      <p>&copy; {currentYear} {name}. All rights reserved.</p>
      {variant === 'minimal' && (
        <nav class="footer-minimal-links">
          <a href="/privacy">Privacy</a>
          <a href="/contact">Contact</a>
        </nav>
      )}
    </div>
  </div>
</footer>

<style>
  .site-footer {
    background-color: var(--color-footer-bg);
    border-top: 1px solid var(--color-footer-border);
    padding: 4rem 0 2rem;
    margin-top: auto;
    color: var(--color-footer-text);
  }

  .footer-grid {
    display: grid;
    grid-template-columns: repeat(1, 1fr);
    gap: 2rem;
    margin-bottom: 3rem;
  }

  @media (min-width: 640px) {
    .footer-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .footer-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .footer-heading {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--color-footer-text);
  }

  .footer-address {
    font-style: normal;
    color: var(--color-footer-text-muted);
    line-height: 1.8;
  }

  .footer-address a {
    color: var(--color-footer-text-muted);
  }

  .footer-address a:hover {
    color: var(--color-footer-accent);
  }

  .footer-links {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer-links li {
    margin-bottom: 0.5rem;
  }

  .footer-links a {
    color: var(--color-footer-text-muted);
  }

  .footer-links a:hover {
    color: var(--color-footer-accent);
  }

  .footer-hours {
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .footer-hours li {
    display: flex;
    justify-content: space-between;
    gap: 1rem;
    margin-bottom: 0.5rem;
    color: var(--color-footer-text-muted);
  }

  .footer-hours .days {
    font-weight: 500;
    color: var(--color-footer-text);
  }

  .footer-social {
    display: flex;
    justify-content: center;
    gap: 1.5rem;
    padding: 2rem 0;
    border-top: 1px solid var(--color-footer-border);
    border-bottom: 1px solid var(--color-footer-border);
  }

  .footer-social a {
    color: var(--color-footer-text-muted);
    transition: color var(--transition-fast);
  }

  .footer-social a:hover {
    color: var(--color-footer-accent);
  }

  .footer-bottom {
    text-align: center;
    padding-top: 2rem;
    color: var(--color-footer-text-muted);
    font-size: 0.875rem;
  }

  /* Simple variant styles */
  .footer-simple {
    text-align: center;
    padding-bottom: 2rem;
  }

  .footer-brand {
    margin-bottom: 1rem;
  }

  .footer-logo {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-footer-text);
  }

  .footer-tagline {
    color: var(--color-footer-text-muted);
    margin-top: 0.5rem;
  }

  /* Minimal variant styles */
  .footer-minimal {
    padding: 1.5rem 0;
  }

  .footer-minimal .footer-bottom {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
    padding-top: 0;
  }

  @media (min-width: 640px) {
    .footer-minimal .footer-bottom {
      flex-direction: row;
      justify-content: space-between;
    }
  }

  .footer-minimal-links {
    display: flex;
    gap: 1.5rem;
  }

  .footer-minimal-links a {
    color: var(--color-footer-text-muted);
    font-size: 0.875rem;
  }

  .footer-minimal-links a:hover {
    color: var(--color-footer-accent);
  }
</style>
